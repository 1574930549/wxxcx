<!--pages/clothes1/clothes1.wxml-->

<view>
  <image src="{{src1 + id + src2}}"></image>
</view>
<view>
  <view>
    价格:
    <text>{{id}}0</text>
  </view>
  <view>
    尺码:
    <text>{{id}}XL</text>
  </view>
  <view>
    颜色:
    <text wx:if="{{id==1}}">red</text>
    <text wx:elif="{{id==2}}">orange</text>
    <text wx:elif="{{id==3}}">yellow</text>
    <text wx:elif="{{id==4}}">green</text>
  </view>
  <view>
    数量:
    <text>{{id}}00</text>
  </view>
</view>

<view>
    <view>
      <button type="primary" bindtap="to">加入购物车</button>
    </view>
    <view>
      <button type="primary">立即购买</button>
    </view>
</view>
